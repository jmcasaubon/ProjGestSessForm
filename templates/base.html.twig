                src="https://kit.fontawesome.com/5bda009b12.js" 
                crossorigin="anonymous"></script> 
            <!-- Inclusion du JavaScript local -->
            <script src="{{asset('js/gsf.js')}}"></script>
        {% endblock %}
    </body>
</html>
